@charset 'UTF-8';

#page-wrapper{background-color: #000;}
.loading-div{display: none;}
.import-item>a{display: block;font-size: 22px;height: 240px;line-height: 240px;margin-bottom: 20px;color: #fff;font-weight: bold;text-align: center;border: 1px solid #aaa;transition:all 0.4s;}
.import-item>a:hover{background-color: #f3964a;color: #fff;}

.clock-div{
	width: 320px;
	height: 320px;
	/*padding-top: 50px;*/
	/*border: 2px solid #B28B10;*/
	position: relative;
	margin: 50px auto;
	/*border-radius: 10px;*/
	z-index: 0;
}
.circle{
	width: 18px;
	height: 18px;
	border-radius: 9px;
	position: absolute;
	left: 50%;
	top: 50%;
	background: #3197EC;
	margin-top: -9px;
	margin-left: -9px;
	z-index: 105;
}
.pointer{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: rotate(-90deg);
	-ms-transform: rotate(-90deg);
	-webkit-transform: rotate(-90deg);
	-o-transform: rotate(-90deg);
	-moz-transform: rotate(-90deg);
	z-index: 100;
}
.h{
	width: 70px;
	height: 8px;
	background: #996699;
	margin-top: -4px;
	transform-origin: 0px 4px;
	-ms-transform-origin: 0px 4px;
	-webkit-transform-origin: 0px 4px;
	-o-transform-origin: 0px 4px;
	-moz-transform-origin: 0px 4px;
	z-index: 101;
}
.m{
	width: 90px;
	height: 6px;
	background: #9AB5DF;
	margin-top: -3px;
	transform-origin: 0px 3px;
	-ms-transform-origin: 0px 3px;
	-webkit-transform-origin: 0px 3px;
	-o-transform-origin: 0px 3px;
	-moz-transform: 0px 3px;
	z-index: 102;
}
.s{
	width: 130px;
	height: 4px;
	background: #f00;
	margin-top: -2px;
	transform-origin: 0px 2px;
	-ms-transform-origin: 0px 2px;
	-webkit-transform-origin: 0px 2px;
	-o-transform-origin: 0px 2px;
	-moz-transform-origin: 0px 2px;
	z-index: 103;
}
.spn{
	position: absolute;
	display: block;
	width: 4px;
	height: 10px;
	background: #9AB5DF;
	left: 50%;
	margin-left: -2px;
	transform-origin: 2px 160px;
	-ms-transform-origin: 2px 160px;
	-webkit-transform-origin: 2px 160px;
	-o-transform-origin: 2px 160px;
	-moz-transform-origin: 2px 160px;
}
.h_spn{
	width: 8px;
	height: 18px;
	border-radius: 0px 0px 3px 3px;
	color: #3197EC;
	margin-left: 0px;
	line-height: 60px;
	text-align: center;
	margin-left: -4px;
	background: #3197EC;
	transform-origin: 4px 160px;
	-ms-transform-origin: 4px 160px;
	-webkit-transform-origin: 4px 160px;
	-o-transform-origin: 4px 160px;
	-moz-transform-origin: 4px 160px;
}
.word_sty{
	height: 65px;
	line-height: 65px;
	text-align: center;
	position: absolute;
	left: 0px;
	font-weight: bold;

}
.tips{
	width: 100%;
	height: 100%;
	padding: 50px;
	line-height: 100%;
	position: absolute;
	top: 0px;
	left: 0px;
	z-index: 10;
	background: #fff;
	border: 1px solid red;
	display: none;
}